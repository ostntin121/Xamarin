<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1.ScratchesPage"
             Title="Черновики">
    <ContentPage.Content>
    <StackLayout>
        <Button Text="Добавить" Command="{Binding CreateScratchCommand}" />
        <ListView x:Name="ScratchesList" ItemsSource="{Binding Scratches}"
                  SelectedItem="{Binding SelectedScratch, Mode=TwoWay}" HasUnevenRows="True">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <ViewCell.View>
                            <StackLayout>
                                <Label Text="{Binding Name}" FontSize="Medium" />
                            </StackLayout>
                        </ViewCell.View>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Button Text="Эта неделя" Command="{Binding GoToCurrentWeekCommand}"></Button>
        <Button Text="История" Command="{Binding GoToHistoryCommand}"></Button>
    </StackLayout>
        </ContentPage.Content>
</ContentPage>